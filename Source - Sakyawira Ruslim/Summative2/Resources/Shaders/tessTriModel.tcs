#version 450 core

uniform float camDistance;

uniform vec3 camPos;

//size of output patch & no. of times the TCS will be executed 
layout (vertices = 3) out;
void main() { 

	float d = distance(gl_in[gl_InvocationID].gl_Position.xyz, camPos);

	gl_TessLevelOuter[0] = 60.0 / d; 
	gl_TessLevelOuter[1] = 60.0 / d; 
	gl_TessLevelOuter[2] = 60.0 / d;

	gl_TessLevelInner[0] = 60.0 / d;

	gl_out[gl_InvocationID].gl_Position = gl_in[gl_InvocationID].gl_Position; 
}